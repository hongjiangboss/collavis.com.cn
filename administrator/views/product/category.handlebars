<div class="container-fluid">
        {{> 'titlebar'}}
        <div class="row" style="margin-top:1em">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="btn-group" role="group">
                                <a href="/product/category-add.html?{{querystr}}" class="btn btn-primary">添加分类</a>
                        </div>
                        <table class="table table-bordered table-striped" style="width:100% !important;margin-top:0.5em">
                                <thead>
                                        <tr>
                                                <th style="width:200px">分类编号</th>
                                                <th>标题</th>
                                                <th style="width:200px">操作</th>
                                        </tr>
                                </thead>
                                <tbody>
                                        {{#each gridview}}
                                        <tr>
                                                <td>{{{name}}}</td>
                                                <td>{{{text}}}</td>
                                                <td>
                                                        <a href="/product/category-edit.html?{{href}}">编辑</a>
                                                        <a onclick="hdel('/product/category-del.html?{{href}}')">删除</a>
                                                </td>
                                        </tr>
                                        {{/each}}
                                </tbody>
                        </table>
                </div>
        </div>
</div>
<script type="text/javascript">
function hdel (uri) {
        if (confirm('确定删除所选项')) {
                jQuery.get(uri, function (result) {
                        alert(result['message'])
                        if (result['code'] === '0') {
                                window.location.href = result['href'];
                        }
                })
        }
}
</script>
